<% include ("layout/cabecalho") %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <h1>
        <%= cabecalho %>
    </h1>
    <table border="1">
        <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Telefone</th>
            <th>CPF</th>
            <th>Ações</th>
        </tr>
        <% for (var i=0; i < contacts.length; i++) { %>
            <tr>
                <td>
                    <%= contacts[i].nome %>
                </td>
                <td>
                    <%= contacts[i].email %>
                </td>
                <td>
                    <%= contacts[i].telefone %>
                </td>
                <td>
                    <%= contacts[i].cpf %>
                </td>
                <td><a href="/contatos/atualiza/<%= i %>">Atualiza</a>&nbsp;&nbsp;&nbsp;&nbsp;<a href="/contatos/deleta/<%= i %>">Deleta</a></td>
            </tr>
            <% }; %>
    </table>
    <p><a href="/contatos/novo">Novo contato</a></p>
    <% include ("layout/rodape") %>